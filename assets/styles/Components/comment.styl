.comment {
	margin-top: 16px;
	margin-bottom: 16px;
	& > & {
		padding-left: 16px;
	}

	.says {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		border: 0;
	}


	.comment-body {
		padding: 16px;
		box-shadow: 0 1px 2px 0 rgba(44,44,44,0.14), 0 2px 1px -2px rgba(44,44,44,0.2), 0 0px 2px 0 rgba(44,44,44,0.12);
	}

	.comment-author {
		.fn,
		.avatar {
			vertical-align: middle;
		}
	}

	.comment-content {
		*:first-child {
			margin-top: 0;
		}

		*:last-child {
			margin-bottom:0
		}
	}

}